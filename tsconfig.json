{
  "compilerOptions": {
    "inlineSources": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES5",
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "filesGlob": ["typings/index.d.ts", "src/**/*"]
}
